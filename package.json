{
  "name": "wootils",
  "description": "A set of Javascript utilities for building Node and browser apps.",
  "homepage": "https://homer0.github.io/wootils/",
  "version": "4.1.0",
  "repository": "homer0/wootils",
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^9.0.1",
    "colors": "^1.4.0",
    "urijs": "^1.19.2",
    "statuses": "^2.0.0",
    "extend": "^3.0.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "cjs2esm": "^1.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.7.0",
    "eslint-plugin-homer0": "^5.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jimple": "^1.5.0",
    "jsdoc": "^3.6.5",
    "jsdoc-ts-utils": "^1.1.1",
    "docdash": "homer0/docdash#semver:^2.1.0",
    "leasot": "^11.2.0",
    "lint-staged": "^10.2.13",
    "semantic-release": "^17.1.1"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./utils/hooks/pre-commit",
      "post-merge": "./utils/hooks/post-merge",
      "prepare-commit-msg": "./utils/hooks/prepare-commit-msg"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "scripts": {
    "prepublishOnly": "./utils/scripts/prepublishOnly",
    "test": "./utils/scripts/test",
    "lint": "./utils/scripts/lint",
    "lint:all": "./utils/scripts/lint-all",
    "docs": "./utils/scripts/docs",
    "todo": "./utils/scripts/todo"
  },
  "config": {
    "cjs2esm": {
      "input": [
        "browser",
        "node",
        "shared"
      ]
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
